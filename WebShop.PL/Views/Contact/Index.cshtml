@model ContactViewModel
<!DOCTYPE html>
<html>
<head>
    <title>Client Contact Form Flat Responsive Widget Template :: w3layouts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Client Contact Form template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free web designs for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Custom Theme files -->
    <link href="~/content/contact.css" rel="stylesheet" type="text/css" media="all"/>
    @*<link href="css/style.css" rel="stylesheet" type="text/css" media="all" />*@
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'><!--web font-->
    <link href="//fonts.googleapis.com/css?family=Amita:400,700" rel="stylesheet">
    <!-- //web font -->
</head>
<body>
    <!-- main -->
    <div class="main">
        <h3 class="text-center">Client Contact Form</h3>
        <div class="main-row">
            <div class="agileits-info">
                <div class="agileits-infoleft">
                    <img src="~/images/iconfinder_user-id_285641.png" width="70" height="70" alt="" />
                </div>
                <div class="agileits-inforight">
                    @*<h2>Support</h2>*@
                    <h3>Support</h3>
                    <p><img src="images/i1.png" alt=""> +01 11 222 3333</p>
                    <p><img src="images/i2.png" alt=""> <a href="mailto:fariborzsaidi@hotmail.com"> fariborzsaidi@hotmail.com</a></p>
                </div>
                <div class="clear"> </div>
            </div>
            >
            <form asp-action="index" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label id="maillabel" asp-for=" AttachmentPath" class="col-md-2 control-label"></label>
                    <div class="col-md-5">

                        <input type="file" asp-for=" AttachmentPath" class="form-control" multiple />
                        <span asp-validation-for=" AttachmentPath" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label id="maillabel" asp-for="UserName" class="col-md-2 control-label"></label>
                    <div class="col-md-5">
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label id="maillabel" asp-for="TelNr" class="col-md-2 control-label"></label>
                    <div class="col-md-5">
                        <input asp-for="TelNr" class="form-control" />
                        <span asp-validation-for="TelNr" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label id="maillabel" asp-for="Email" class="col-md-2 control-label"></label>
                    <div class="col-md-5">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label id="maillabel" asp-for="Message" class="col-md-2 control-label"></label>
                    <div class="col-md-5">
                        <textarea rows="3" cols="50" asp-for="Message" class="form-control"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-5">
                        <input type="submit" class="btn btn-primary" value="Send" />
                    </div>
                </div>
            </form>

        </div>
    </div>
    <!-- //main -->
    <!-- copyright -->
    <div class="w3copyright-agile">
        <p>© 2020 Client Contact Form. All rights reserved | Design by User</p>
    </div>
    <!-- //copyright -->
</body>
</html>


