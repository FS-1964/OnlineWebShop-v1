
@model CakeDetailViewModel

<h2>@Model.Cake.Name</h2>

<div class="thumbnail">
    <img alt="@Model.Cake.Name" src="@Model.Cake.ImageUrl" asp-append-version="true">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Cake.Price</h3>
        <h3>
            <a href="#">@Model.Cake.Name</a>
        </h3>
        <h4>@Model.Cake.ShortDescription</h4>
       
        <p>@Model.Cake.LongDescription</p>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-cakeId="@Model.Cake.CakeId">Add to cart</a>
            </p>
            
        </div>
    </div>
</div>
<h3>Reviews for this cake</h3>
<div class="ex1">
    @if (@Model.Cake.CakeReviews != null)
    {
        @foreach (var review in @Model.Cake.CakeReviews)
        {
            @review.Review
            <hr />
        }
    }
</div>

        <form name="myform" asp-controller="Cake" asp-action="Details" method="post" class="form-horizontal" role="form">
            <h4>Write a review</h4>
            <hr />
            <input type="hidden" asp-for="@Model.Cake.CakeId"  />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Review" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input id="review" asp-for="Review" class="form-control" />
                    <span asp-validation-for="Review" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary" value="Send review" onclick="submitForm()" />
                </div>
            </div>

        </form>
<script>
    $("#review").val("")
</script>