@model IEnumerable<WebShop.PL.Components.AdminMenuItem>

<li class="dropdown">
    <a style="color:#0366d6"  asp-controller="Admin"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Admin<b class="caret"></b></a>
    <ul class="dropdown-menu bg-dark " role="menu">
        @foreach (var menuItem in Model)
        {
            <li class="text-center">
                <a style="color:#95a0a0" asp-controller="Admin" asp-action=@menuItem.ActionValue>@menuItem.DisplayValue</a>
            </li>
        }
    </ul>
</li>
